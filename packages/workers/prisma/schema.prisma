generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String   @id @default(cuid()) // 用户ID
  email       String   @unique               // 用户邮箱，唯一
  password    String                           // 用户密码
  createdAt   DateTime @default(now())      // 创建时间
  updatedAt   DateTime @updatedAt            // 更新时间
  links       Link[]                         // 用户创建的链接
}

model Link {
  id          String   @id @default(cuid()) // 短链接ID
  userId      String                           // 用户ID，关联用户
  originalUrl String                           // 原始网址
  shortUrl    String   @unique               // 短网址，唯一
  createdAt   DateTime @default(now())      // 创建时间
  updatedAt   DateTime @updatedAt            // 更新时间

  user        User     @relation(fields: [userId], references: [id]) // 关联用户
  visits      Visit[]                          // 访问记录
}

model Visit {
  id          String   @id @default(cuid()) // 访问记录ID
  linkId      String                           // 短链接ID，关联链接
  ipAddress   String                           // 访问者IP地址
  country     String                           // 访问者国家
  createdAt   DateTime @default(now())      // 访问时间

  link        Link     @relation(fields: [linkId], references: [id]) // 关联链接
}
